{% extends "layout.twig" %}
{% set customErrormessages = {
	'Url.name is required': 'URL не должен быть пустым',
	'Url.name is not a valid URL': 'Некорректный URL'
} %}

{% block main %}
	<div class="row">
		<div class="col-12 col-md-10 col-lg-8 mx-auto border rounded-3 bg-light p-5">
			<h1 class="display-3">Анализатор страниц</h1>
			<p class="lead">Бесплатно проверяйте сайты на SEO пригодность</p>
			<form action="/urls" method="post" class="row" required="">
				<div class="col-8">
					<input type="text" name="url[name]" value="{% if formData['url']['name'] %} {{ formData['url']['name'] }}{% endif %}" class="form-control form-control-lg {% if errors %} is-invalid {% endif %}" placeholder="https://www.example.com">
					{% if errors %}
						<div class="invalid-feedback">
							{{ customErrormessages[errors['url.name']|first] }}
						</div>
					{% endif %}

				</div>
				<div class="col-2">
					<input type="submit" class="btn btn-primary btn-lg ms-3 px-5 text-uppercase mx-3" value="Проверить">
				</div>
			</form>
		</div>
	</div>
{% endblock main %}
